<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.roomtype.TabFragment1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorWhite"
        android:elevation="8dp">

        <TextView
            android:id="@+id/textViewTittle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondary"
            android:fontFamily="@font/roboto"
            android:padding="2dp"
            android:text="@string/modest_room"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/text_area1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image1"/>

        <Button
            android:id="@+id/buttonChooseRoomType1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/choose"
            android:background="@drawable/bordered_button"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintTop_toBottomOf="@id/text_area3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/econom_hotel_room"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textViewTittle1"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <ImageView
            android:id="@+id/image_OK1"
            android:layout_width="32dp"
            android:layout_height="32dp"

            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"

            app:layout_constraintBottom_toBottomOf="@id/text_area1"
            app:layout_constraintEnd_toStartOf="@id/text_area1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_area1"
            app:srcCompat="@drawable/galochka"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/text_area1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/econom_area"
            android:gravity="center|start"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/colorSecondary"
            app:layout_constraintBottom_toTopOf="@id/text_area2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_OK1"
            app:layout_constraintTop_toBottomOf="@+id/textViewTittle1" />


        <ImageView
            android:id="@+id/image_OK2"
            android:layout_width="32dp"
            android:layout_height="32dp"

            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"

            app:layout_constraintBottom_toBottomOf="@id/text_area2"
            app:layout_constraintEnd_toStartOf="@id/text_area2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_area2"
            app:srcCompat="@drawable/galochka"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/text_area2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/econom_furniture"
            android:gravity="center|start"
            android:textSize="20sp"
            android:textColor="@color/colorSecondary"
            app:layout_constraintBottom_toTopOf="@id/text_area3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_OK2"
            app:layout_constraintTop_toBottomOf="@id/text_area1" />

        <ImageView
            android:id="@+id/image_OK3"
            android:layout_width="32dp"
            android:layout_height="32dp"

            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"

            app:layout_constraintBottom_toBottomOf="@id/text_area3"
            app:layout_constraintEnd_toStartOf="@id/text_area3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_area3"
            app:srcCompat="@drawable/galochka"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/text_area3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/econom_info"
            android:gravity="center|start"
            android:textSize="20sp"
            android:textColor="@color/colorSecondary"
            app:layout_constraintBottom_toTopOf="@id/buttonChooseRoomType1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_OK3"
            app:layout_constraintTop_toBottomOf="@id/text_area2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>