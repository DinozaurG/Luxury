<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TabFragment3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorWhite"
        android:elevation="8dp">

        <TextView
            android:id="@+id/textViewTittle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/luxury_room"
            android:padding="2dp"
            android:background="@color/colorSecondary"
            android:fontFamily="@font/roboto"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonChooseRoomType3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/choose"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/image3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTittle3"
            app:srcCompat="@drawable/luxury_hotel_room"
            tools:src="@tools:sample/backgrounds/scenic" />

        <ImageView
            android:id="@+id/image3_OK1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toStartOf="@id/text3_area1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text3_area1"
            app:layout_constraintBottom_toBottomOf="@id/text3_area1"
            app:srcCompat="@android:drawable/checkbox_on_background"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/text3_area1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/econom_area"
            android:gravity="center|start"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/colorSecondary"
            app:layout_constraintBottom_toTopOf="@id/text3_area2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image3_OK1"
            app:layout_constraintTop_toBottomOf="@+id/image3" />

        <ImageView
            android:id="@+id/image3_OK2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toStartOf="@id/text3_area2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text3_area2"
            app:layout_constraintBottom_toBottomOf="@id/text3_area2"
            app:srcCompat="@android:drawable/checkbox_on_background"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/text3_area2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/econom_furniture"
            android:gravity="center|start"
            android:textSize="20sp"
            android:textColor="@color/colorSecondary"
            app:layout_constraintBottom_toTopOf="@id/text3_area3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image3_OK2"
            app:layout_constraintTop_toBottomOf="@id/text3_area1" />

        <ImageView
            android:id="@+id/image3_OK3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonChooseRoomType3"
            app:layout_constraintEnd_toStartOf="@id/text3_area3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text3_area3"
            app:srcCompat="@android:drawable/checkbox_on_background"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/text3_area3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/econom_coin"
            android:gravity="center|start"
            android:textSize="20sp"
            android:textColor="@color/colorSecondary"
            app:layout_constraintBottom_toTopOf="@id/buttonChooseRoomType3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image3_OK3"
            app:layout_constraintTop_toBottomOf="@id/text3_area2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>